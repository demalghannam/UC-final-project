<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/phonewallpaper"
    android:orientation="vertical"
    tools:context=".whoarewe">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="222dp"
        android:layout_height="153dp"
        app:srcCompat="@drawable/mann" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/arsenal"
        android:text="   Who Are We ?"
        android:textColor="#FFFFFF"
        android:textSize="32sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="525dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/arapey"
        android:text='"Books are a uniquely portable magic "                                         Stephen King'
        android:textColor="#FFFFFF"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="390dp"
        android:layout_height="140dp"
        android:fontFamily="@font/arsenal"
        android:text="Knocking BooKnock Doors and walking through it introduces you to your own fantasy world where books are the main plot and you are the main character "
        android:textColor="@color/white"
        android:textSize="24dp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="390dp"
        android:layout_height="140dp"
        android:textSize="23sp"
        android:textColor="@color/white"
        android:fontFamily="@font/arsenal"
        android:text="BooKnock is made for the passionate readers where they can explore books and genres, add it to their list and make friends who share this love for books through social media " />
    <TextView
        android:layout_width="400dp"
        android:layout_height="50dp"
        android:layout_marginTop="13dp"
        android:textSize="18dp"
        android:fontFamily="@font/arsenal"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:text="do you have a book you would like to see it here ? we would love to hear it from you , contact us !"/>

    <Button
        android:id="@+id/buttoncall"
        android:layout_width="48dp"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/ic_baseline_call_24"
        android:backgroundTint="#E91E63"
        android:onClick="Ondialbutton"/>

</LinearLayout>